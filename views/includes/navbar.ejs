<style>
    /* Search Button */
    .search-btn {
        background-color: #fe424d;
        color: white;
        border-radius: 25px;
        padding: 0 1rem;
        white-space: nowrap; /* prevents breaking into two lines */
    }
    .search-btn:hover {
        background-color: #fe424d;
        color: white;
    }
    .search-btn i {
        margin-right: 0.5rem;
    }

    /* Search Input */
    .search-input {
        font-size: 0.95rem;
        border-radius: 25px;
        padding: 0.5rem 3rem;
    }

    /* Collapsed Navbar Background */
    .navbar-collapse {
        background: white !important;
        padding: 1rem;
        border-radius: 10px;
    }

    /* Prevent breaking of the 'Airbnb your home' text */
    .no-wrap {
        white-space: nowrap;
    }

    /* Brand styling fix */
    .navbar-brand i {
        font-size: 1.6rem;
    }

    #web-title{
      color: #fe424d !important;
      font-family: 'Lobster';
      font-size: 1.6rem;
    }
</style>
<link href="https://fonts.googleapis.com/css2?family=Lobster&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">


<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Hamburger button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Menu -->
    <div class="collapse navbar-collapse text-center" id="navbarNav">

      <!-- Left -->
      <ul class="navbar-nav web-title">
        <li class="nav-item">
          <a class="nav-link fw-semibold" id="web-title" href="/listings">Wanderlust</a>
        </li>
      </ul>

      <!-- Search Bar -->
      <div class="flex-grow-1 d-flex justify-content-center my-2 my-lg-0">
        <form class="d-flex" role="search" action="/listings/search" method="get" id="searchBox">

          <input class="form-control search-input me-2"
            type="search"
            placeholder="Search Destinations"
            aria-label="Search"
            name="q"
            id="mySearchInput"
            required
          />

          <button class="btn search-btn d-flex align-items-center gap-1" type="submit" id="search">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>

        </form>
      </div>

      <!-- Right Side Buttons -->
      <ul class="navbar-nav ms-lg-3 text-center">

        <li class="nav-item d-flex align-items-center">
          <a class="nav-link no-wrap" href="/listings/new">Airbnb your home</a>
        </li>

        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
        <% } %>

        <% if (currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          </li>
        <% } %>
      </ul>

    </div>
  </div>
</nav>
